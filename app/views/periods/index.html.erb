<div class="dashhead m-t">
  <div class="dashhead-titles">
    <h6 class="dashhead-subtitle"></h6>
    <h2 class="dashhead-title">Monthly Boxes</h2>
  </div>
  <div class="text-xs-right">
    <div class='btn-group btn-group-header'>
      <button type="button" class="btn btn-primary-outline"
        data-toggle="collapse" href="#filters-group"
        aria-expanded="false" aria-controls="filters-group" >
          <%= icon('filter') %>
      </button>
      <%= link_to upload_boxes_path, :class => 'btn btn-primary-outline', 'data-turbolinks' => false do %>
        <%= icon('upload') %> Upload monthly boxes
      <% end %>
    </div>
  </div>
</div>
<%= render 'snippets/flash_messages' %>
<div id="filters-group" class="collapse in">
  <ul class="list-group m-t m-b-0">
    <li class="list-group-header">
      Filters
    </li>
    <li class="list-group-item">
      <div class="row">
        <%= search_form_for @q, url: periods_path do |f| %>
        <div class='col-md-4 col-sm-12'>
          <%= f.select :id_eq, Period.all.collect { |period| [ period.month_date.strftime('%b %Y'), period.id]}, {include_blank: true, prompt: 'Filter by month'}, { :class => ' custom-select'} %>
        </div>
        <div class='col-md-2 col-sm-12'>
          <div class='btn-group f-r'>
          <%= f.button icon('search'), :class => 'btn btn-primary' %>
          <%= link_to icon('repeat'), periods_path, :class => 'btn btn-primary' %>
          <% end %>
          </div>
        </div>
      </div>
    </li>
  </ul>
</div>
<div class='row m-t'>
  <div class='col-sm-4'>
    <ul class="list-group">
      <% @periods.each do |period| %>
      <li class="list-group-item">
        <%= link_to period.month_date.strftime("%b %Y"), period_path(period.id) %>
        <span style="float:right">
          <%= period.name %>
        </span>
      </li>
      <% end %>
    </ul>
  </div>
</div>