<div class="dashhead m-t">
  <div class="dashhead-titles">
    <h6 class="dashhead-subtitle"></h6>
    <h2 class="dashhead-title">Categories</h2>
  </div>
  <div class="text-xs-right">
    <div class="btn-group btn-group-header">
      <%= link_to new_category_path, :class => 'btn btn-primary-outline' do %>
        <%= icon('plus') %> New Category
      <% end %>
    </div>
  </div>
</div>
  <div class='row m-t'>
    <div class='col-sm-4'>
      <ul class="list-group">
        <% @categories.each do |category| %>
        <li class="list-group-item">
          <%= link_to category.name, category_path(category.id) %>
          <span style="float:right">
            <%= number_to_percentage category.tariff_rate*100, precision: 0 %>
          </span>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>