<div class="dashhead">
  <div class="dashhead-titles">
    <h6 class="dashhead-subtitle"></h6>
    <h2 class="dashhead-title">Categories</h2>
  </div>
  <div class="flextable table-actions">
    <div class="flextable-item flextable-primary">
      <%= link_to new_category_path, :class => 'btn btn-pill btn-primary' do %>
        <%= icon('plus') %> New Category
      <% end %>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table category-table" data-sort="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Tariff Rate</th>
          <th>Edit</th>
        </tr>
      </thead>
      <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category_path(category.id) %></td>
        <td><%= number_to_percentage category.tariff_rate*100, precision: 0 %></td>
        <td><%= link_to icon('edit'), edit_category_path(category.id) %></td>
      </tr>
      <% end %>
    </ul>
  </div>
</div>