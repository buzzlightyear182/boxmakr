<div class="dashhead m-t">
  <div class="dashhead-titles">
    <h6 class="dashhead-subtitle"></h6>
    <h2 class="dashhead-title">Items</h2>
  </div>
  <div class="text-xs-right">
    <div class='btn-group btn-group-header'>
      <button type="button" class="btn btn-primary-outline"
        data-toggle="collapse" href="#filters-group"
        aria-expanded="false" aria-controls="filters-group" >
          <%= icon('filter') %>
      </button>
      <%= link_to new_item_path, :class => 'btn btn-primary-outline', 'data-turbolinks' => false do %>
        <%= icon('plus') %>
        <% end %>
        <%= link_to upload_items_path, :class => 'btn btn-primary-outline', 'data-turbolinks' => false do %>
        <%= icon('upload') %>
        <% end %>
        <%= link_to download_items_path, :class => 'btn btn-primary-outline', 'data-turbolinks' => false do %>
        <%= icon('download') %>
        <% end %>
    </div>
  </div>
</div>
<%= render 'snippets/flash_messages' %>
<div id="filters-group" class="collapse in">
  <ul class="list-group m-t m-b-0">
    <li class="list-group-header">
      Filters
    </li>
    <li class="list-group-item">
      <div class="row">
        <%= search_form_for @q, url: items_path, remote: true do |f| %>
        <div class="col-md-6 col-sm-12">
          <%= f.search_field :description_cont, :class => 'form-control', placeholder: "Search item descriptions" %>
        </div>
        <div class='col-md-4 col-sm-12'>
          <%= f.select :brand_id_eq, Brand.all.collect { |b| [ b.name, b.id]}, {include_blank: true, prompt: 'Filter by brand'}, { :class => 'brand-filter custom-select'} %>
        </div>
        <div class='col-md-2 col-sm-12'>
          <div class='btn-group f-r'>
          <%= f.submit :class => 'btn btn-primary' %>
          <%= link_to icon('repeat'), items_path, :class => 'btn btn-primary' %>
          <% end %>
          </div>
        </div>
      </div>
    </li>
  </ul>
</div>
<div class='row m-t' id='items'>
  <%= render 'items' %>
</div>

