<div class="row">
  <div class="col-sm-6">
    <div class="dashhead">
      <div class="dashhead-titles">
        <h2 class="dashhead-title">Download Items</h2>
      </div>
    </div>
  </div>
</div>
<%= render 'snippets/flash_messages' %>
<div class='row m-t'>
  <div class="col-md-6 col-sm-12">
  <p>Leave blank to download entire item list</p>
  <%= search_form_for(@q, url: download_items_path(@q, format: :csv)) do |f| %>
    <%= f.search_field :description_cont, :class => 'form-control m-b', placeholder: "Filter by item descriptions" %>
    <%= f.select :brand_id_eq, Brand.all.collect { |b| [ b.name, b.id]}, {include_blank: true, prompt: 'Filter by brand'}, { :class => 'brand-filter custom-select'} %>
    <%= f.submit 'Download CSV', :class => 'btn btn-primary m-t' %>
    <%= link_to icon('repeat'), '', :class => 'btn btn-primary m-t m-l', :onclick => 'this.form.reset()' %>
    <% end %>
  </div>
</div>
